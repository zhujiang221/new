<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.phms.mapper.NotificationMessageMapper">
  <resultMap id="BaseResultMap" type="com.phms.pojo.NotificationMessage">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="receiver_id" jdbcType="BIGINT" property="receiverId" />
    <result column="sender_id" jdbcType="BIGINT" property="senderId" />
    <result column="appointment_id" jdbcType="BIGINT" property="appointmentId" />
    <result column="type" jdbcType="VARCHAR" property="type" />
    <result column="title" jdbcType="VARCHAR" property="title" />
    <result column="content" jdbcType="VARCHAR" property="content" />
    <result column="is_read" jdbcType="TINYINT" property="isRead" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
  </resultMap>

  <sql id="Base_Column_List">
    id, receiver_id, sender_id, appointment_id, type, title, content, is_read, create_time
  </sql>

  <!-- 插入消息记录 -->
  <insert id="insert" parameterType="com.phms.pojo.NotificationMessage" useGeneratedKeys="true" keyProperty="id">
    insert into notification_message
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="receiverId != null">
        receiver_id,
      </if>
      <if test="senderId != null">
        sender_id,
      </if>
      <if test="appointmentId != null">
        appointment_id,
      </if>
      <if test="type != null">
        type,
      </if>
      <if test="title != null">
        title,
      </if>
      <if test="content != null">
        content,
      </if>
      <if test="isRead != null">
        is_read,
      </if>
      <if test="createTime != null">
        create_time,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="receiverId != null">
        #{receiverId,jdbcType=BIGINT},
      </if>
      <if test="senderId != null">
        #{senderId,jdbcType=BIGINT},
      </if>
      <if test="appointmentId != null">
        #{appointmentId,jdbcType=BIGINT},
      </if>
      <if test="type != null">
        #{type,jdbcType=VARCHAR},
      </if>
      <if test="title != null">
        #{title,jdbcType=VARCHAR},
      </if>
      <if test="content != null">
        #{content,jdbcType=VARCHAR},
      </if>
      <if test="isRead != null">
        #{isRead,jdbcType=TINYINT},
      </if>
      <if test="createTime != null">
        #{createTime,jdbcType=TIMESTAMP},
      </if>
    </trim>
  </insert>

  <!-- 根据接收者ID查询消息列表（分页） -->
  <select id="selectByReceiverId" parameterType="com.phms.pojo.NotificationMessage" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from notification_message
    where receiver_id = #{receiverId}
    order by create_time desc
    <if test="page != null and limit != null">
      limit #{page}, #{limit}
    </if>
  </select>

  <!-- 统计接收者的未读消息数量 -->
  <select id="countUnreadByReceiverId" parameterType="java.lang.Long" resultType="int">
    select count(*) from notification_message
    where receiver_id = #{receiverId} and is_read = 0
  </select>

  <!-- 根据ID更新消息已读状态 -->
  <update id="updateReadStatus">
    update notification_message
    set is_read = #{isRead}
    where id = #{id}
  </update>

  <!-- 批量标记消息为已读 -->
  <update id="batchMarkAsRead">
    update notification_message
    set is_read = 1
    where receiver_id = #{receiverId}
    <if test="ids != null and ids.size() > 0">
      and id in
      <foreach collection="ids" item="id" open="(" separator="," close=")">
        #{id}
      </foreach>
    </if>
  </update>

  <!-- 统计接收者的消息总数 -->
  <select id="countByReceiverId" parameterType="java.lang.Long" resultType="int">
    select count(*) from notification_message
    where receiver_id = #{receiverId}
  </select>

  <!-- 根据ID查询消息 -->
  <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from notification_message
    where id = #{id}
  </select>
</mapper>
